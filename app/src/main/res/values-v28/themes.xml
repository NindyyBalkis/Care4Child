<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.ProjectMobile" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@color/pink</item>
    </style>

    <style name="button_base" parent="Widget.AppCompat.Button">

    </style>

    <style name="button_primary" parent="button_base">
        <item name="android:background">@drawable/el_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="input_base" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingHorizontal">28dp</item>
        <item name="android:textColorHint">@color/disabled</item>
    </style>

    <style name="input_border" parent="input_base">
        <item name="android:background">@drawable/el_input_border</item>
    </style>

    <style name="checkbox_base" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
    </style>

    <style name="checkbox_primary" parent="checkbox_base">
        <item name="android:background">@drawable/el_checkbox</item>
        <item name="android:button">@drawable/el_checkbox_unchecked</item>
    </style>

</resources>